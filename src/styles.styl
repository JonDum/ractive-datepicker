
.ractive-datepicker

    display inline-flex
    flex-direction row

    background #fff


    &, *, *:before, *:after
        box-sizing border-box

    .header
        background #333
        color rgba(255,255,255,0.5)
        padding 2em
        min-width 11em
        position relative
        text-align left

        label
            font-size 0.8em
            margin-bottom 1em
            display inline-block
            opacity 0.5

        > div
            cursor pointer

        &.range .active:after
            content none
        .active
            color #fff
            position relative
            &:after
                content ''
                display inline-block
                border 10px solid transparent
                border-right-color #fff
                position absolute
                right -2em
                top 50%
                margin-top -10px

        .weekday
            font-size 2em

        .time
            margin-top 1em
            margin-bottom 2em
            span
                display inline-block
                border-bottom 1px dashed currentColor

    .editor
        flex 1 1 66%
        padding 2em
        position relative
        user-select none
        .years:after, .clock:after
            position absolute
            content ''
            top 1em
            left 0
            right 0
            bottom 1em
            pointer-events none
        .years:after
            background linear-gradient(#fff,rgba(255, 255, 255, 0),#fff)
        .clock:after
            background linear-gradient(#fff 20%,rgba(255, 255, 255, 0),#fff 80%)

    .monthyear
        font-weight bold
        text-align center
        margin-bottom 1em
        span
            cursor pointer
            display inline-block
            border-bottom 1px dashed currentColor

    .nav
        position relative
        .next, .previous
            user-select none
            position absolute
            padding 0.5em
            display inline-block
            cursor pointer
            top -0.5em
        .previous
            left 2.5em
            &:before
                content '<'
        .next
            right 2.5em
            &:before
                content '>'

    .weekdays
        display flex
        opacity 0.5
        font-weight bold

    .dates, .weekdays
        > div
            display inline-block
            width 3em
            height 3em
            line-height @height
            text-align center

    .dates
        max-width 21em
        margin-bottom -0.5em

    .years, .clock
        width 21em
        height 21em

    .dates
        user-select none

        .selected, .start
            transition border-radius 0.3s ease

        > div
            user-select none
            -webkit-user-select none
            -ms-user-select none

        > div:not(.between):not(.start):not(.end):not(.selected)
            cursor pointer
            border-radius 50%
            &:hover
                background #f0f0f0

        .off:not(.ghost)
            opacity 0.25

        .between
            background mix(#0097A7, #fff, 15%)
            &.ghost
                background fade-out(mix(#0097A7, #fff, 15%), 0.75)

        > div
            &.selected, &.start, &.end
                background #0097A7
                color #fff
                border-radius 50%
                &.ghost
                    background fade-out(#0097A7, 0.75)
                    color inherit
                    cursor pointer

        .start
            //border-top-right-radius 0
            //border-bottom-right-radius 0
            //border-radius 2em 0 0 25%
            border-radius 50% 0 0 50% !important

        .end
            //border-top-left-radius 0
            //border-bottom-left-radius 0
            //border-radius 0 25% 2em 0
            border-radius 0 50% 50% 0 !important

    .years
        overflow-y scroll
        text-align center
        &::-webkit-scrollbar
            display none
        div
            font-size 1.4em
            margin 1em 0
            cursor pointer
            &.selected
                font-weight bold
                margin 0.5em 0
                display inline-block
                cursor default

    .clock
        display flex
        flex-direction row
        text-align right
        justify-content center
        align-items center
        overflow hidden
        line-height 1
        > div
            font-size 1.5em
        .minutes, .hours
            overflow-y scroll
            max-height 22em
            user-select none
            padding 0 1em
            cursor default
            &::-webkit-scrollbar
                display none
            div
                user-select none
                cursor default
                margin-bottom 0.88em

        .minutes div:first-child
            margin-top 11em
        .minutes div:last-child
            margin-bottom 11em

        .hours div:first-child
            margin-top 11em
        .hours div:last-child
            margin-bottom 11em

        .meridiem
            cursor pointer
            span:not(.selected)
                opacity 0.2



$compact()
    flex-direction column
    font-size 0.8em
    .header
        display flex
        flex-direction row
        align-items flex-end
        padding 1.5em
        .weekday
            font-size 1em
        div
            display inline
        > div
            margin-top 0 !important
            margin-right 1em
            margin-bottom 0
        .active:after
            border-right-color transparent
            border-bottom-color #fff
            left 50%
            right auto
            bottom -1.5em
            margin-top 0
            margin-left -10px

    .editor
        flex 1 1


.ractive-datepicker
    @media (max-width:700px)
        $compact()
    &.compact
        $compact()
